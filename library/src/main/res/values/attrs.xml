<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="mirror" format="boolean" />
    <attr name="scaleType" format="enum">
        <enum name="fit" value="0"/>
        <enum name="fill" value="1"/>
        <enum name="balanced" value="2"/>
    </attr>
    <attr name="overlaySurface" format="boolean" />

    <declare-styleable name="VideoView">
        <attr name="mirror"/>
        <attr name="scaleType"/>
        <attr name="overlaySurface"/>
    </declare-styleable>

    <declare-styleable name="VideoTextureView">
        <attr name="mirror"/>
        <attr name="scaleType"/>
    </declare-styleable>
</resources>
