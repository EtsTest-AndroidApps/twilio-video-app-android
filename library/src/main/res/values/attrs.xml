<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Prefix all attributes with "tvi" to prevent attribute name collisions when consuming
    the SDK in an application.

    https://github.com/twilio/video-quickstart-android/issues/487 -->
    <attr name="tviMirror" format="boolean" />
    <attr name="tviScaleType" format="enum">
        <enum name="fit" value="0"/>
        <enum name="fill" value="1"/>
        <enum name="balanced" value="2"/>
    </attr>
    <attr name="tviOverlaySurface" format="boolean" />

    <declare-styleable name="VideoView">
        <attr name="tviMirror"/>
        <attr name="tviScaleType"/>
        <attr name="tviOverlaySurface"/>
    </declare-styleable>

    <declare-styleable name="VideoTextureView">
        <attr name="tviMirror"/>
        <attr name="tviScaleType"/>
    </declare-styleable>
</resources>
