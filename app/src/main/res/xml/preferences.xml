<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/general">
        <ListPreference
            android:defaultValue="Production"
            android:entries="@array/realm_array"
            android:entryValues="@array/realm_array"
            android:key="pref_realm"
            android:summary="%s"
            android:title="@string/realm_string"
            android:negativeButtonText="@null"/>
        <ListPreference
            android:defaultValue="P2P"
            android:entries="@array/topology_array"
            android:entryValues="@array/topology_array"
            android:key="pref_topology"
            android:summary="%s"
            android:title="@string/topology"
            android:negativeButtonText="@null"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/media">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/aspect_ratio_array"
            android:entryValues="@array/aspect_ratio_array_values"
            android:key="pref_aspect_ratio"
            android:summary="%s"
            android:title="@string/aspect_ratio"
            android:negativeButtonText="@null"/>
        <com.twilio.video.app.data.RangeBarPreference
            android:title="@string/fps"
            app:endKey="pref_max_fps"
            app:endTick="30"
            app:height="@dimen/preference_aspect_ratio_height"
            app:startKey="pref_min_fps"
            app:startTick="0" />
        <com.twilio.video.app.data.RangeBarPreference
            android:title="@string/video_dimensions"
            app:endKey="pref_max_video_dim"
            app:entries="@array/video_dimensions_array"
            app:height="@dimen/preference_video_dimensions_height"
            app:pinRadius="36dp"
            app:startKey="pref_min_video_dim" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about">
        <Preference
            android:key="pref_identity"
            android:title="@string/identity"
            android:summary="Rob"/>
        <Preference
            android:key="pref_version"
            android:title="@string/version"
            android:summary="1.0.0"/>
        <Preference
            android:key="pref_logout"
            android:title="@string/logout"/>
    </PreferenceCategory>
</PreferenceScreen>