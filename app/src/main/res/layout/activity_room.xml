<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RoomActivity" >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/content_room" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/lobby_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lobbyToolbar"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.Lobby.PopupMenu" />

            <include layout="@layout/join_room" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/join_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/join_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/joinLayoutTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/join_room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="@color/joinLayoutTextColor"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:gravity="end|bottom">

            <ImageButton
                android:id="@+id/disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fab_margin"
                android:background="@drawable/roundbutton"
                android:visibility="gone"
                app:backgroundTint="@android:color/holo_red_dark"
                app:srcCompat="@drawable/ic_call_end_white_24px" />

            <ImageButton
                android:id="@+id/local_video_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/disconnect"
                android:layout_marginBottom="@dimen/fab_margin"
                android:background="@drawable/roundbutton"
                app:backgroundTint="@color/lobbyMediaControls"
                app:srcCompat="@drawable/ic_videocam_white_24px" />

            <ImageButton
                android:id="@+id/local_audio_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/local_video_image_button"
                android:layout_marginBottom="@dimen/fab_margin"
                android:background="@drawable/roundbutton"
                app:backgroundTint="@color/lobbyMediaControls"
                app:srcCompat="@drawable/ic_mic_white_24px" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="?android:attr/windowBackground"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin" >

                <CheckBox
                    android:id="@+id/enable_stats_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_stats"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stats_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/local"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />

                <TextView
                    android:id="@+id/local_video_track_stats_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />

            </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.DrawerLayout>